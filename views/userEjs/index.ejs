		}); */

		for (var i = 0; i < cnt; i++) {
			$(".content_slide").children(":first").insertAfter($(".content_slide").children(":last"));
		}
		$(".content_slide").stop(true).css({
			opacity: 0,
			left: "0"
		});
		$(".content_slide").stop(true).animate({
